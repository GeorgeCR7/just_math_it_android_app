<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SuccessQuizActivity"
    >


    <ImageView
        android:id="@+id/imgViewSuccess"
        android:layout_width="273dp"
        android:layout_height="314dp"
        android:layout_marginStart="89dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="89dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/success_img" />

    <TextView
        android:id="@+id/txtSuccessMainLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/success"
        android:textColor="#000000"
        android:textSize="45sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imgViewSuccess"
        app:layout_constraintStart_toStartOf="@+id/imgViewSuccess"
        app:layout_constraintTop_toBottomOf="@+id/imgViewSuccess" />

    <TextView
        android:id="@+id/txtSuccessQuiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:gravity="center"
        android:text="@string/success_quiz"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@+id/txtSuccessMainLabel"
        app:layout_constraintStart_toStartOf="@+id/txtSuccessMainLabel"
        app:layout_constraintTop_toBottomOf="@+id/txtSuccessMainLabel" />

    <Button
        android:id="@+id/btnOKBackMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:text="@android:string/ok"
        app:layout_constraintEnd_toEndOf="@+id/txtSuccessQuiz"
        app:layout_constraintStart_toStartOf="@+id/txtSuccessQuiz"
        app:layout_constraintTop_toBottomOf="@+id/txtSuccessQuiz" />
</androidx.constraintlayout.widget.ConstraintLayout>